{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "src",
        "paths": {
            "*": ["*"]
        },
        "typeRoots": ["./node_modules/@types", "./src@types"],
        "allowSyntheticDefaultImports": true
    }
}
